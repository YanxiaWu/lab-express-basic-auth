<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Welcome to Sign Up</h1>
      <hr />
      <form action="/registro" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username(2 character minimum)</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            minlength="2"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password(6 characters
            minimum)</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            minlength="6"
          />
        </div>
        {{#if errorMessage}}
          <div id="error" class="mb-3">{{errorMessage}}</div>
        {{/if}}
        <button type="submit" class="btn btn-dark">Sign Up</button>
      </form>
    </div>
  </div>
</div>